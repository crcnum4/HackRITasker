<p id="notice"><%= notice %></p>

<h1>Listing Awards</h1>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>Points required</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.title %></td>
        <td><%= award.description %></td>
        <td><%= award.points_required %></td>
        <td><%= link_to 'Show', award, class: "btn btn-success" %>
        <% if current_user.user_type == "tasker" %>
          <%= link_to 'Edit', edit_award_path(award), class: "btn btn-info" %>
          <%= link_to 'Destroy', award, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.user_type == "tasker" %>
  <%= link_to 'New Award', new_award_path %>
<% end %>
