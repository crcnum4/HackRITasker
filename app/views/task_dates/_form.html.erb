<div class="well bs-component">
  <%= form_for([@task, @task_date], :url => task_task_dates_path, class: "form-horizontal") do |f| %>
    <% if @task_date.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@task_date.errors.count, "error") %> prohibited this task date from being saved:</h2>
  
        <ul>
        <% @task_date.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <h2>Create due date for <%= @task.title.capitalize %></h2>
  
    <div class="form-group">
      <%= f.label :due_date, "Due Date" %><br>
      <%= f.date_field :due_date %>
    </div>
    <div class="form-group">
      <%= f.label :point_value %><br>
      <%= f.number_field :point_value %>
    </div>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <div class="form-group">
      <%= f.radio_button :add_another, "Yes", :checked => true %>
      <%= f.label :add_another, "Yes" %>
      <%= f.radio_button :add_another, "No" %>
      <%= f.label :add_another, "No" %>
    </div>
    
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>