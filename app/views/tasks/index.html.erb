<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table class="table table-default table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Redeemed</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.redeemed %></td>
        <td><%= link_to 'Show', task, class: "btn btn-success" %>
        <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
        <% if current_user.user_type == "tasker" %>
          <%= link_to 'Destroy', task, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.user_type == "tasker" %>
  <%= link_to 'New Task', new_task_path %>
<% end %>
